<nav class="navbar navbar-light bg-light">
  <%= link_to "The Bar", cocktails_path, class: "navbar-brand" %>
  <%= link_to "Make A New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
</nav>


<div class="index-page-banner text-center">
  <h1 class="display-4">Choose Your Cocktail Below</h1>
  <p class="lead"> And find all the ingredients you need to get your cocktail fix</p>
</div>


<div class="d-flex container justify-content-between text-justify">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem; height:18rem; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name , cocktail_path(cocktail)  %></h5>
      </div>
    </div>
  <% end %>

</div>





